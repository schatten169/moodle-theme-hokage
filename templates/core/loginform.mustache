
<div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12 p-lg-20">
  <div class="bg-body d-flex flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
    <div class="d-flex flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">
      <form class="form w-100" novalidate="novalidate" action=" {{loginurl}} " method="post" id="login">
        <input type="hidden" name="logintoken" value="{{logintoken}}">
        <div class="text-center mb-11">
          <h1 class="text-dark fw-bolder mb-3">Masuk ke E-Learning</h1>
        </div>
        <div class="fv-row mb-8">
        {{#maintenance}}
          <div class="alert alert-danger login-maintenance">
            {{{maintenance}}}
          </div>
        {{/maintenance}}
        {{#error}}
          <a href="#" id="loginerrormessage" class="sr-only">{{error}}</a>
          <div class="alert alert-danger" role="alert">{{error}}</div>
        {{/error}}
        </div>
        <div class="fv-row mb-8">
        {{^canloginbyemail}}
            <input type="text" placeholder="{{#str}} username {{/str}}" name="username" autocomplete="off" class="form-control bg-transparent" />
            {{/canloginbyemail}}
            {{#canloginbyemail}}                
            <input type="text" placeholder="{{#str}} usernameemail {{/str}}" name="email" autocomplete="off" class="form-control bg-transparent" />
            {{/canloginbyemail}}
        </div>
        <div class="fv-row mb-3">
          <input type="password" placeholder="Password" name="password" autocomplete="off" class="form-control bg-transparent" />
        </div>
        <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
          <div></div>
          <a href="{{forgotpasswordurl}}" class="link-primary">Lupa password?</a>
        </div>
        <div class="d-grid mb-10">
          <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
            <span class="indicator-label">Masuk</span>
            <span class="indicator-progress">Mohon menunggu...
            <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
          </button>
        </div>
        {{# canloginasguest }}
        <div class="text-gray-500 text-center fw-semibold fs-6">Sebagian courses bisa diakses sebagai tamu<br>
        <a href="javascript:;" onclick="$('#guestlogin').submit()" class="link-primary">Masuk sebagai tamu</a></div>
        {{/ canloginasguest }}
        {{^ canloginasguest }}
        <div class="text-gray-500 text-center fw-semibold fs-6">Anda masuk sebagai tamu!<br>
        <a href="logout" class="link-primary">Keluar sebagai tamu</a></div>
        {{/ canloginasguest }}
      </form>
    </div>
    
