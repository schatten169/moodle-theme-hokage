{{!
    Template yang digunakan untuk menampilkan notifikasi inline (bukan popup, bukan alert)
    Maunya sih alert tapi belum bisa.
}}
<div class="alert {{$alertclass}}alert-secondary{{/alertclass}} alert-block in {{ extraclasses }} {{#closebutton}}alert-dismissible{{/closebutton}}" {{!
        }}{{# announce }} role="alert" data-aria-autofocus="true"{{/ announce }}>
    {{{ message }}}
    {{# closebutton }}{{!
    }}<button type="button" class="btn-close" data-dismiss="alert">
        <span class="sr-only">{{#str}}dismissnotification, core{{/str}}</span>
    </button>{{!
    }}{{/ closebutton }}
</div>
