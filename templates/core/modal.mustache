{{! 
    Template untuk mengatur semua modal (tidak termasuk backdrop dsb)
}}
<div class="modal moodle-has-zindex fade" tabindex="-1" data-region="modal-container" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="{{uniqid}}-modal-title">
    <div class="modal-dialog mw-650px {{$classes}}{{classes}}{{/classes}}" data-region="modal" tabindex="0">
        <div class="modal-content">
            <div class="modal-header {{$headerclasses}}{{headerclasses}}{{/headerclasses}}" data-region="header">
                {{$header}}
                    <h5 id="{{uniqid}}-modal-title" class="modal-title" data-region="title">{{$title}}{{title}}{{/title}}</h5>
                {{/header}}
                <div class="pb-0 border-0 justify-content-end">
                    <div class="btn btn-sm btn-icon btn-active-color-primary" data-action="hide">
                        <i class="ki-duotone ki-cross fs-1">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                    </div>
                </div>
            </div>
            <div class="modal-body" data-region="body">
                {{$body}}
                    {{{body}}}
                {{/body}}
            </div>
            <div class="modal-footer" data-region="footer">
                {{$footer}}
                    {{{footer}}}
                {{/footer}}
            </div>
        </div>
    </div>
</div>
