
<div class="card-see-more text-center p-2 mb-1">
	<button type="button" class="btn btn-secondary p-2 h-auto fs-6" data-bs-toggle="modal" data-bs-target="#modal-{{uniqid}}">
	       {{#str}}seemore, theme_hokage{{/str}}
	</button>
</div>

<div class="modal course-summary-modal fade" id="modal-{{uniqid}}" tabindex="-1" role="dialog" aria-labelledby="modal-title-{{uniqid}}" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title-{{uniqid}}">{{#title}}{{title}}{{/title}}</h3>
                <button type="button" class="btn btn-outline btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                {{{body}}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">{{#str}}summaryclose, theme_hokage{{/str}}</button>
                <a href="{{courselink}}" class="btn btn-primary btn-sm">{{#str}}summaryopen, theme_hokage{{/str}}</a>
            </div>
        </div>
    </div>
</div>
